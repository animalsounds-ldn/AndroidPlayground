<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <Button
        android:id="@+id/dbTestbutton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#009688"
        android:onClick="openDbTest"
        android:text="Testing for DB and Recycler View"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerMainContent" />

    <TextView
        android:id="@+id/headerMainContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Welcome to ZooVerse Playground"
        android:textAlignment="center"
        android:textColor="#3F51B5"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/audioTestButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="openAudioTest"
        android:layout_marginTop="8dp"
        android:text="Testing for Audio Files"
        android:backgroundTint="#009688"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/dbTestbutton"
        app:layout_constraintStart_toStartOf="@+id/dbTestbutton"
        app:layout_constraintTop_toBottomOf="@+id/dbTestbutton" />

</androidx.constraintlayout.widget.ConstraintLayout>